# Recommended for most uses. The primary database connection URL.
DATABASE_URL=

# For uses requiring a direct database connection without pgbouncer (connection pooling).
DATABASE_URL_UNPOOLED=

# Parameters for constructing your own database connection string.
PGHOST=             # Database host address.
PGHOST_UNPOOLED=    # Database host address for non-pooled connections.
PGUSER=             # Database username.
PGDATABASE=         # Database name.
PGPASSWORD=         # Database password.

# Parameters for Vercel Postgres Templates.
POSTGRES_URL=               # Full PostgreSQL connection URL for pooled connections.
POSTGRES_URL_NON_POOLING=   # Full PostgreSQL connection URL for non-pooled connections.
POSTGRES_USER=              # PostgreSQL username.
POSTGRES_HOST=              # PostgreSQL host address.
POSTGRES_PASSWORD=          # PostgreSQL password.
POSTGRES_DATABASE=          # PostgreSQL database name.
POSTGRES_URL_NO_SSL=        # PostgreSQL connection URL without SSL.
POSTGRES_PRISMA_URL=        # PostgreSQL connection URL for Prisma ORM.

# Sanity CMS configuration.
NEXT_PUBLIC_SANITY_PROJECT_ID=     # Sanity project ID for frontend use.
NEXT_PUBLIC_SANITY_DATASET=        # Sanity dataset name for frontend use.
NEXT_PUBLIC_SANITY_API_VERSION=    # Sanity API version for frontend use.

# Sanity API tokens.
SANITY_API_READ_TOKEN=     # Sanity API token for read-only access.
SANITY_API_WRITE_TOKEN=    # Sanity API token for write access.

# Stripe payment gateway configuration.
STRIPE_SECRET_KEY=         # Stripe secret key for API authentication.
STRIPE_WEBHOOK_SECRET=     # Stripe webhook secret for verifying webhook requests.

# Base URL for the application (e.g., https://example.com).
NEXT_PUBLIC_BASE_URL=